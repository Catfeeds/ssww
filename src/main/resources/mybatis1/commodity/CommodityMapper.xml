<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="CommodityMapper">
	
	<!--表名 -->
	<sql id="tableName">
		TB_COMMODITY
	</sql>
	
	<!-- 字段 -->
	<sql id="Field">
		FITEMID,	
		FPARENTID,	
		FMODEL,	
		FQTY,	
		INVENTORY,	
		ISPUTAWAY,	
		FNOTE,	
		PRICE,	
		DISCOUNT,	
		STATE,	
		FNUMBER,	
		FNAME,	
		COMMODITY_ID
	</sql>
	
	<!-- 字段值 -->
	<sql id="FieldValue">
		#{FITEMID},	
		#{FPARENTID},	
		#{FMODEL},	
		#{FQTY},	
		#{INVENTORY},	
		#{ISPUTAWAY},	
		#{FNOTE},	
		#{PRICE},	
		#{DISCOUNT},	
		#{STATE},	
		#{FNUMBER},	
		#{FNAME},	
		#{COMMODITY_ID}
	</sql>
	
	<!-- 新增-->
	<insert id="save" parameterType="pd">
		insert into 
	<include refid="tableName"></include>
		(
	<include refid="Field"></include>
		) values (
	<include refid="FieldValue"></include>
		)
	</insert>
	
	<!-- 删除-->
	<delete id="delete" parameterType="pd">
		delete from
		<include refid="tableName"></include>
		where 
			COMMODITY_ID = #{COMMODITY_ID}
	</delete>
	
	<!-- 修改 -->
	<update id="edit" parameterType="pd">
		update
		<include refid="tableName"></include>
		set 
			<!-- FITEMID = #{FITEMID},
			FPARENTID = #{FPARENTID}, -->
			FMODEL = #{FMODEL},
			<!-- FQTY = #{FQTY}, -->
			<!-- INVENTORY = #{INVENTORY}, -->
			ISPUTAWAY = #{ISPUTAWAY},
			FNOTE = #{FNOTE},
			PRICE = #{PRICE},
			DISCOUNT = #{DISCOUNT},
			STATE = #{STATE},
			FNUMBER = #{FNUMBER},
			FNAME = #{FNAME},
		COMMODITY_ID = COMMODITY_ID
		where 
		COMMODITY_ID = #{COMMODITY_ID}
	</update>
	
	<!-- 通过ID获取数据 -->
	<select id="findById" parameterType="pd" resultType="pd">
		select 
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 
			COMMODITY_ID = #{COMMODITY_ID}
	</select>
	
	
	
	<!-- 列表 -->
	<select id="datalistPage" parameterType="page" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 1=1
		<if test="pd.treeKey!= null and pd.treeKey != ''"><!-- 关键词检索 -->
			and  INVENTORY = #{pd.treeKey}
		</if>
		<if test="pd.keywords!= null and pd.keywords != ''"><!-- 关键词检索 -->
			and
				(
				FNUMBER LIKE '%'+#{pd.keywords}+'%'
				<!--	根据需求自己加检索条件
					字段1 LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%')
					 or 
					字段2 LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%') 
				-->
				)
		</if>
		<if test="pd.keywords1!= null and pd.keywords1 != ''"><!-- 关键词检索 -->
			and
				(
				FNAME LIKE '%'+#{pd.keywords1}+'%' 
				<!--	根据需求自己加检索条件
					字段1 LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%')
					 or 
					字段2 LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%') 
				-->
				)
		</if>
	</select>
	
	<!-- 列表(全部) -->
	<select id="listAll" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
	</select>
	
	<!-- 批量删除 -->
	<delete id="deleteAll" parameterType="String">
		delete from
		<include refid="tableName"></include>
		where 
			COMMODITY_ID in
		<foreach item="item" index="index" collection="array" open="(" separator="," close=")">
                 #{item}
		</foreach>
	</delete>
	
	<!-- fh313596790qq(青苔) -->
</mapper>